<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="16dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="进入通知页面,点击返回,回到上一个页面"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="simple Notification"
        android:onClick="showSimpleNotification"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="进入通知页面,点击返回,回到指定页面"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="simple Notification"
            android:onClick="showSimpleNotification2"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="有进度条的通知"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="有进度条的通知"
            android:onClick="showProgressNotification"/>

</LinearLayout>